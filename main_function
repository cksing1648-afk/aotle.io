import React, { useState, useMemo, useCallback, useEffect } from 'react';
import { Dialog } from '@headlessui/react';
import { X, Share2, ChevronUp, ChevronDown, Check, ThumbsDown } from 'lucide-react';
import { motion, AnimatePresence } from 'framer-motion';

// --- æ­¥é©Ÿä¸€ï¼šé‡æ–°å»ºæ§‹ä½ çš„è³‡æ–™ ---
const characterData = [
  { name: "è‰¾é€£è‘‰å¡", gender: "ç”·", affiliation: "èª¿æŸ¥å…µåœ˜", attribute: "é€²æ“Šçš„å·¨äºº", firstAppearance: 1 },
  { name: "ç±³å¡èé˜¿å¡æ›¼", gender: "å¥³", affiliation: "èª¿æŸ¥å…µåœ˜", attribute: "é˜¿å¡æ›¼ä¸€æ—", firstAppearance: 1 },
  { name: "é˜¿çˆ¾æ•äºé­¯é›·ç‰¹", gender: "ç”·", affiliation: "èª¿æŸ¥å…µåœ˜", attribute: "è¶…å¤§å‹å·¨äºº", firstAppearance: 1 },
  { name: "èŠç´å¸ƒæœ—", gender: "ç”·", affiliation: "ç‘ªé›·æˆ°å£«", attribute: "é§ä¹‹å·¨äºº", firstAppearance: 2 },
  { name: "è²çˆ¾æ‰˜ç‰¹èƒ¡ä½›", gender: "ç”·", affiliation: "ç‘ªé›·æˆ°å£«", attribute: "è¶…å¤§å‹å·¨äºº", firstAppearance: 2 },
  { name: "äºå¦®é›·æ©å“ˆç‰¹", gender: "å¥³", affiliation: "ç‘ªé›·æˆ°å£«", attribute: "å¥³å·¨äºº", firstAppearance: 2 },
  { name: "ç´„ç¿°åŸºçˆ¾ä¼‘å¦", gender: "ç”·", affiliation: "èª¿æŸ¥å…µåœ˜", attribute: "äººé¡", firstAppearance: 2 },
  { name: "èå¤å¸ƒå‹æ–¯", gender: "å¥³", affiliation: "èª¿æŸ¥å…µåœ˜", attribute: "äººé¡", firstAppearance: 2 },
  { name: "é‡Œç¶­é˜¿å¡æ›¼", gender: "ç”·", affiliation: "èª¿æŸ¥å…µåœ˜", attribute: "äººé¡æœ€å¼·", firstAppearance: 9 },
  { name: "å‰å…‹è‘‰å¡", gender: "ç”·", affiliation: "ç‘ªé›·æˆ°å£«", attribute: "ç¸ä¹‹å·¨äºº", firstAppearance: 35 },
  { name: "å¸Œçµ²ç‰¹è‰äºé›·æ–¯", gender: "å¥³", affiliation: "èª¿æŸ¥å…µåœ˜", attribute: "ç‹æ—è¡€çµ±", firstAppearance: 3 },
];

const MAX_GUESSES = 20; // å¯ä»¥å¢åŠ çŒœæ¸¬æ¬¡æ•¸ï¼Œå› ç‚ºé›£åº¦æ›´é«˜
const ATTRIBUTES = ['gender', 'affiliation', 'attribute', 'firstAppearance'];

// --- æ¯æ—¥ä¸€é¡Œé‚è¼¯ ---
const getDailySolution = () => {
  const epoch = new Date('2025-12-19');
  const today = new Date();
  today.setHours(0, 0, 0, 0);
  const index = Math.floor((today - epoch) / (1000 * 60 * 60 * 24));
  return characterData[index % characterData.length];
};

// å±¬æ€§æ¨™é¡Œ
const attributeLabels = {
  gender: 'æ€§åˆ¥',
  affiliation: 'é™£ç‡Ÿ',
  attribute: 'ç‰¹å¾µ',
  firstAppearance: 'æœ€åˆç™»å ´',
};

// ä¸»å…ƒä»¶
export default function AotAttributeWordle() {
  const solution = useMemo(() => getDailySolution(), []);
  const [guesses, setGuesses] = useState([]); // å„²å­˜çŒœæ¸¬çš„è§’è‰²ç‰©ä»¶
  const [currentGuessName, setCurrentGuessName] = useState('');
  const [isGameOver, setIsGameOver] = useState(false);
  const [gameStatus, setGameStatus] = useState('PLAYING');
  const [isModalOpen, setIsModalOpen] = useState(false);
  const [searchTerm, setSearchTerm] = useState('');

  const characterNames = useMemo(() => characterData.map(c => c.name), []);
  const alreadyGuessedNames = useMemo(() => guesses.map(g => g.name), [guesses]);

  const filteredCharacters = useMemo(() => {
    if (!searchTerm) return [];
    return characterNames.filter(name => 
      name.includes(searchTerm) && !alreadyGuessedNames.includes(name)
    ).slice(0, 5);
  }, [searchTerm, characterNames, alreadyGuessedNames]);

  const handleSelectCharacter = (name) => {
    setCurrentGuessName(name);
    setSearchTerm('');
  };

  const handleSubmitGuess = () => {
    if (!currentGuessName || guesses.length >= MAX_GUESSES) return;

    const guessObject = characterData.find(c => c.name === currentGuessName);
    if (!guessObject) return;

    const newGuesses = [...guesses, guessObject];
    setGuesses(newGuesses);
    setCurrentGuessName('');

    if (guessObject.name === solution.name) {
      setGameStatus('WON');
      setIsGameOver(true);
      setTimeout(() => setIsModalOpen(true), 1200);
    } else if (newGuesses.length === MAX_GUESSES) {
      setGameStatus('LOST');
      setIsGameOver(true);
      setTimeout(() => setIsModalOpen(true), 1200);
    }
  };

  const getFeedback = (guess, solution, attribute) => {
    const guessValue = guess[attribute];
    const solutionValue = solution[attribute];

    if (guessValue === solutionValue) {
      return 'correct';
    }
    if (attribute === 'firstAppearance') {
      return guessValue < solutionValue ? 'higher' : 'lower';
    }
    return 'incorrect';
  };
  
  const shareResult = () => {
    const title = `å·¨äººæ¨ç† #${Math.floor((new Date() - new Date('2025-12-19')) / (1000 * 60 * 60 * 24))}`;
    const resultGrid = guesses
      .map(guess =>
        ATTRIBUTES.map(attr => {
          const feedback = getFeedback(guess, solution, attr);
          if (feedback === 'correct') return 'ğŸŸ©';
          if (feedback === 'higher') return 'ğŸ”¼';
          if (feedback === 'lower') return 'ğŸ”½';
          return 'ğŸŸ¥';
        }).join('')
      )
      .join('\n');
    const text = `${title} (${guesses.length}/${MAX_GUESSES})\n\n${resultGrid}\n\nä½ èƒ½çŒœå‡ºæ˜¯èª°å—ï¼Ÿ`;
    navigator.clipboard.writeText(text).then(() => {
      alert('çµæœå·²è¤‡è£½åˆ°å‰ªè²¼ç°¿ï¼');
    });
  };

  const FeedbackTile = ({ guess, solution, attribute, index }) => {
    const feedback = getFeedback(guess, solution, attribute);
    const isNumeric = attribute === 'firstAppearance';
    
    let bgColor = 'bg-gray-600';
    if (feedback === 'correct') bgColor = 'bg-green-600';
    if (feedback === 'incorrect') bgColor = 'bg-red-600';

    return (
      <motion.div
        className={`h-full w-full flex items-center justify-center rounded-md text-white font-bold text-sm sm:text-base p-1 ${bgColor}`}
        initial={{ opacity: 0, scale: 0.5, rotateX: 90 }}
        animate={{ opacity: 1, scale: 1, rotateX: 0 }}
        transition={{ delay: index * 0.1 + 0.2, duration: 0.4 }}
      >
        {feedback === 'correct' && <Check />}
        {feedback === 'incorrect' && <ThumbsDown />}
        {feedback === 'higher' && <ChevronUp />}
        {feedback === 'lower' && <ChevronDown />}
      </motion.div>
    );
  };

  return (
    <div className="bg-gray-900 text-white min-h-screen flex flex-col items-center pt-8 pb-4 px-2 font-sans">
      <header className="mb-6 text-center">
        <h1 className="text-3xl sm:text-4xl font-bold tracking-wider uppercase">å·¨äººæ¨ç†</h1>
        <p className="text-gray-400 mt-1">çŒœçŒœä»Šå¤©çš„ã€Šé€²æ“Šçš„å·¨äººã€‹è§’è‰²æ˜¯èª°</p>
      </header>
      
      <div className="w-full max-w-2xl flex flex-col items-center gap-4 mb-6">
        <div className="relative w-full max-w-md">
          <input
            type="text"
            value={searchTerm}
            onChange={(e) => setSearchTerm(e.target.value)}
            placeholder="è¼¸å…¥è§’è‰²åç¨±æœå°‹..."
            className="w-full p-3 bg-gray-800 border-2 border-gray-600 rounded-lg focus:outline-none focus:border-blue-500"
            disabled={isGameOver}
          />
          {filteredCharacters.length > 0 && (
            <div className="absolute top-full left-0 right-0 mt-1 bg-gray-800 border border-gray-600 rounded-lg z-10">
              {filteredCharacters.map(name => (
                <div
                  key={name}
                  onClick={() => handleSelectCharacter(name)}
                  className="p-3 hover:bg-gray-700 cursor-pointer"
                >
                  {name}
                </div>
              ))}
            </div>
          )}
        </div>
        <div className="flex items-center gap-4 w-full max-w-md">
            <div className="flex-grow h-12 flex items-center justify-center bg-gray-700 rounded-lg text-lg font-semibold">
                {currentGuessName || 'å·²é¸æ“‡çš„è§’è‰²'}
            </div>
            <button
                onClick={handleSubmitGuess}
                disabled={!currentGuessName || isGameOver}
                className="px-6 py-3 bg-green-600 text-white font-bold rounded-lg hover:bg-green-700 disabled:bg-gray-500 disabled:cursor-not-allowed transition-colors"
            >
                çŒœæ¸¬
            </button>
        </div>
      </div>

      <div className="w-full max-w-4xl px-2">
        {/* Header Row */}
        <div className="grid grid-cols-5 gap-2 text-center font-bold mb-2 text-xs sm:text-base">
          <div className="bg-gray-700 rounded-md py-2">è§’è‰²</div>
          {ATTRIBUTES.map(attr => <div key={attr} className="bg-gray-700 rounded-md py-2">{attributeLabels[attr]}</div>)}
        </div>
        
        {/* Guesses Grid */}
        <div className="flex flex-col gap-2">
          {guesses.map((guess, guessIndex) => (
            <motion.div 
              key={guessIndex} 
              className="grid grid-cols-5 gap-2 h-16"
              initial={{ opacity: 0, y: -20 }}
              animate={{ opacity: 1, y: 0 }}
            >
              <div className="bg-gray-800 rounded-md flex items-center justify-center text-center font-semibold p-1 text-sm sm:text-base">{guess.name}</div>
              {ATTRIBUTES.map((attr, attrIndex) => (
                <FeedbackTile key={attr} guess={guess} solution={solution} attribute={attr} index={attrIndex} />
              ))}
            </motion.div>
          ))}
          {/* Placeholder rows */}
          {Array(MAX_GUESSES - guesses.length).fill(0).map((_, i) => (
             <div key={i} className="grid grid-cols-5 gap-2 h-16">
                <div className="bg-gray-800/50 rounded-md"></div>
                {ATTRIBUTES.map(attr => <div key={attr} className="bg-gray-800/50 rounded-md"></div>)}
             </div>
          ))}
        </div>
      </div>

      <Dialog open={isModalOpen} onClose={() => setIsModalOpen(false)} className="relative z-50">
        <div className="fixed inset-0 bg-black/60" aria-hidden="true" />
        <div className="fixed inset-0 flex items-center justify-center p-4">
          <Dialog.Panel className="w-full max-w-sm rounded-xl bg-gray-800 p-6 text-center shadow-2xl">
            <Dialog.Title className="text-2xl font-bold mb-2">
              {gameStatus === 'WON' ? 'æ­å–œä½ ï¼ŒçŒœå°äº†ï¼' : 'å¯æƒœï¼Œæ¬¡æ•¸ç”¨å®Œäº†'}
            </Dialog.Title>
            <p className="mb-4 text-lg">ä»Šå¤©çš„ç­”æ¡ˆæ˜¯ï¼š<span className="font-bold text-green-400">{solution.name}</span></p>
            <div className="flex flex-col items-center gap-4">
              <button onClick={shareResult} className="w-full bg-green-600 hover:bg-green-700 text-white font-bold py-3 px-4 rounded-lg flex items-center justify-center gap-2">
                <Share2 size={20} /> åˆ†äº«ä½ çš„çµæœ
              </button>
              <button onClick={() => setIsModalOpen(false)} className="w-full bg-gray-600 hover:bg-gray-700 text-white font-bold py-3 px-4 rounded-lg flex items-center justify-center gap-2">
                <X size={20} /> é—œé–‰
              </button>
            </div>
          </Dialog.Panel>
        </div>
      </Dialog>
    </div>
  );
}
